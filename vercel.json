{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api/index.php" },

    { "source": "/login.php", "destination": "/api/login.php" },
    { "source": "/register.php", "destination": "/api/register.php" },
    { "source": "/logout.php", "destination": "/api/logout.php" },
    { "source": "/account.php", "destination": "/api/account.php" },

    { "source": "/content_free.php", "destination": "/api/content_free.php" },
    { "source": "/content_premium.php", "destination": "/api/content_premium.php" },

    { "source": "/admin.php", "destination": "/api/admin.php" }
  ]
}
